<UserControl x:Class="CurrencyCalc.Pages.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding About, Source={StaticResource ViewModelLocator}}">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernFrame>
            <StackPanel>
                <TextBlock>Created by</TextBlock>
                <TextBlock>Szymon Bartnik</TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0 30 0 0">
                    <TextBlock VerticalAlignment="Center" Margin="0 0 30 0">for</TextBlock>
                    <Image Width="200" Source="../Images/egzotech.png" />
                </StackPanel>
            </StackPanel>
        </mui:ModernFrame>
    </Grid>
</UserControl>
