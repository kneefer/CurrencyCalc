<mui:ModernWindow x:Class="CurrencyCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="Currency Calc - 4 Egzotech" MinHeight="500" MinWidth="900"
        AllowsTransparency="True" WindowStyle="None"
        IsTitleVisible="True" ContentSource="Pages/Live.xaml">
    
    <mui:ModernWindow.MenuLinkGroups>
        
        <mui:LinkGroup DisplayName="currency calc - welcome">
            <mui:LinkGroup.Links>
                <mui:Link  DisplayName="LIVE" Source="Pages/Live.xaml" />
                <mui:Link DisplayName="HISTORY" Source="Pages/History.xaml"  />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        
        <mui:LinkGroup DisplayName="currency calc" GroupName="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="About app" Source="/Pages/About.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        
    </mui:ModernWindow.MenuLinkGroups>
    
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="about" Source="/Pages/About.xaml" />
    </mui:ModernWindow.TitleLinks>
    
</mui:ModernWindow>
